@model Mvc_BO.Models.Aluno

@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<h1>Detalhes do Aluno</h1>

<div>
    <h4>Aluno</h4>
    @if(Model == null) {
        <dd>Nenhuma informação foi encontrada com o critério informado</dd>
    } else {
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nascimento)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nascimento)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class = "col-sm-10">
                @* @Html.DisplayFor(model => model.Foto) *@
                <img src="@Url.Content(@Model.Foto)" alt="@Model.Texto" />
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Texto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Texto)
            </dd>
        </dl>
    }
    <hr />
</div>
<div>
    <a asp-action="Index">Voltar à Listagem de Alunos</a>
</div>
